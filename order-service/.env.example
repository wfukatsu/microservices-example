# Environment Variables for Order Service

# JWT Security Configuration (REQUIRED - NO DEFAULTS)
JWT_SECRET=your-very-secure-secret-key-here-at-least-256-bits-long
JWT_EXPIRATION=86400000
JWT_ISSUER=order-service

# Server Configuration
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=local

# External Service URLs
INVENTORY_SERVICE_URL=http://localhost:8081
PAYMENT_SERVICE_URL=http://localhost:8082
SHIPPING_SERVICE_URL=http://localhost:8083

# Database Configuration
SCALARDB_CONTACT_POINTS=jdbc:sqlite:shared/sqlite-data/order-service.db
SCALARDB_USERNAME=
SCALARDB_PASSWORD=

# Monitoring Configuration
MANAGEMENT_ENDPOINTS_ENABLED=true
METRICS_EXPORT_PROMETHEUS_ENABLED=true

# Logging Configuration
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_ORDER_SERVICE=DEBUG
LOG_LEVEL_SCALARDB=INFO

# Redis Cache Configuration (Optional)
CACHE_REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0
REDIS_TIMEOUT=3000ms
REDIS_POOL_MAX_ACTIVE=20
REDIS_POOL_MAX_IDLE=10
REDIS_POOL_MIN_IDLE=1
REDIS_POOL_MAX_WAIT=3000ms